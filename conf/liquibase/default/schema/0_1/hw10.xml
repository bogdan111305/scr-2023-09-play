<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

        <changeSet id="create Product table" author="brubcov">
          <createTable tableName="Product">
              <column name="id" type="varchar(30)">
                <constraints primaryKey="true" nullable="false"/>
              </column>
              <column name="title" type="varchar(1024)">
                  <constraints nullable="false"/>
              </column>
              <column name="description" type="text">
                  <constraints nullable="false"/>
              </column>
          </createTable>
        </changeSet>



        <changeSet id="create ProductItem table" author="brubcov">
          <createTable tableName="ProductItem">
              <column name="id" type="varchar(30)">
                <constraints primaryKey="true" nullable="false"/>
              </column>
              <column name="price" type="bigint">
                <constraints nullable="false"/>
              </column>
              <column name="count" type="bigint">
                <constraints nullable="false"/>
              </column>
              <column name="inStock" type="boolean">
                <constraints nullable="false"/>
              </column>
              <column name="productId" type="varchar(30)">
                  <constraints nullable="false"/>
              </column>
          </createTable>
          <addForeignKeyConstraint baseColumnNames="productId"
              baseTableName="ProductItem"
              constraintName="fk_ProductItem_productId_Product_id"
              referencedColumnNames="id"
              referencedTableName="Product"/>
        </changeSet>

</databaseChangeLog>